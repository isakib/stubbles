<%= form_for([@story, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :assigned_to_id %><br />
    <%= f.select(:assigned_to_id, User.find(:all).collect {|u| [u.email, u.id]}, :prompt => 'Select') %>
  </div>
  <div class="field">
    <%= f.label :hours_estimated %><br />
    <%= f.text_field :hours_estimated %>
  </div>
  <div class="field">
    <%= f.label :hours_spent %><br />
    <%= f.text_field :hours_spent %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
