<div>
	<h3><%= story.title %></h3><span><%= story.status %></span><br/>
	<span><%= story.assigned_to.name %></span>
	<p><%= story.description %></p>
	<div>
		<%= link_to 'Show', project_story_path(project, story) %>
		<%= link_to 'Edit', edit_project_story_path(project, story), :remote=>true %>
		<%= link_to 'Destroy', project_story_path(project, story), :confirm => 'Are you sure?', :method => :delete %>
		<%= link_to 'Tasks', story_tasks_path(story) %>
	</div>
</div>